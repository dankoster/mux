	"version": "0.2.0",
	"configurations": [
		{
			"request": "launch",
			"name": "Debug server.ts",
			"type": "node",
			"program": "${workspaceFolder}/server/server.ts",
			"cwd": "${workspaceFolder}",
			"env": {},
			"runtimeExecutable": "deno",
			"runtimeArgs": [
				"run",
				"--inspect-wait",
				"--allow-all",
				"--unstable-ffi",
				"--allow-read=$PWD,'./dist',$HOME/Lab/certs/out/chatmux.crt,$HOME/Lab/certs/out/chatmux.key"
				,"--allow-env"
				,"--env"
				,"--unstable-kv"
				,"--allow-net"
				,"--watch-hmr"
			],
			"attachSimplePort": 9229
		}
	]
}